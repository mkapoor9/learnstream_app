generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Course{
    id  String @id @default(uuid())
    title String 
    description String
    createdBy String
    createdAt DateTime @default(now())

    enrollments Enrollment[]  
}

model Enrollment{
    id String @id @default(uuid())
    userId String
    courseId String
    createdAt DateTime @default(now())

    course  Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

    @@unique([userId,courseId])
}
