generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model UserProfile {
  id        String   @id        // SAME id from Auth service
  email     String   @unique
  name      String?
  avatarUrl String?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)
}

enum Role{
  USER 
  INSTRUCTOR
  ADMIN
}